<lxs>
    <scene root="root" axis_length="10"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="secondaryCamera" near="0.1" far="500" angle="45">
            <from x="10" y="7" z="10" />
            <to x="0" y="2.0" z="5.0" />
        </perspective>
        <ortho id="orthoCamera" near="0.1" far="500" left="2" right="2" top="2" bottom="2">
            <from x="10" y="7" z="10" />
            <to x="0" y="-5" z="0" />
            <up x="0" y="1" z="0" />
            <!-- opcional, default 0,1,0 -->
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="defaultLight" enabled="1">
            <location x="0.0" y="5.0" z="5.0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="bankTexture" file="scenes/images/bank.jpg" />
        <texture id="leavesTexture" file="scenes/images/leaves.jpg" />
        <texture id="rocksTexture" file="scenes/images/rocks.jpg" />
        <texture id="trunkTexture" file="scenes/images/trunk-image.jpg" />
        <texture id="vidralTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.3" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="testTransform">
            <translate x="5" y="0" z="0" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="myTriangle">
            <triangle x1="1" y1="0" z1="0" x2="0" y2="2" z2="0" x3="0" y3="0" z3="3"/>
        </primitive>
        <primitive id="myCylinder">
            <cylinder base="3" top="1" height="3" slices="10" stacks="1" />
        </primitive>
        <primitive id="mySphere">
            <sphere radius="2" slices="50" stacks="25" />
        </primitive>
        <primitive id="myTorus">
            <torus inner="1" outer="2" slices="50" loops="50" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="5" />
                <scale x="2" y="1" z="2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="vidralTexture"/>
            <children>
                <primitiveref id="myTorus" />
            </children>
        </component>
        
        <component id="testSphere">
            <transformation>
                 <transformationref id="testTransform" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="vidralTexture"/>
            <children>
                <primitiveref id="myTorus"/>
            </children>
        </component>
<!--
        <component id="testInheritance">
            <transformation>
                <translate x="0" y="0" z="-3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="testSphere" />
            </children>
        </component>
        -->

    </components>
</lxs>


