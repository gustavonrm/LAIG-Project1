<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="secondaryCamera" near="0.1" far="500" angle="45">
            <from x="10" y="7" z="10" />
            <to x="0" y="2.0" z="5.0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="defaultLight" enabled="1">
            <location x="0.0" y="5.0" z="5.0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="metalTexture" file="scenes/images/metal.jpg" />
        <texture id="fishTexture" file="scenes/images/fish-scale.png" />
        <texture id="metalTexture" file="scenes/images/metal.jpg" />
        <texture id="leavesTexture" file="scenes/images/leaves.jpg" />
        <texture id="rocksTexture" file="scenes/images/rocks.jpg" />
        <texture id="trunkTexture" file="scenes/images/trunk-image.jpg" />
        <texture id="vidralTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="yellowMetal" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.98" g="0.93" b="0.36" a="1.0" />
            <diffuse r="0.98" g="0.93" b="0.36" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="greyMetal" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="blueMetal" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.16" g="0.23" b="0.56" a="1.0" />
            <diffuse r="0.16" g="0.23" b="0.56" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
         <material id="glass" shininess="20">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.22" g="0.99" b="0.99" a="1.0" />
            <diffuse r="0.22" g="0.99" b="0.99" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <!-- rock and fish material, rock material has a lower speculation -->
    </materials>

    <transformations>
        <transformation id="submarinePos">
            <translate x="0" y="-5" z="0" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="myTriangle">
            <triangle x1="1" y1="0" z1="0" x2="0" y2="2" z2="0" x3="0" y3="0" z3="3"/>
        </primitive>
        <primitive id="myCylinder">
            <cylinder base="3" top="1" height="3" slices="10" stacks="1" />
        </primitive>
        <primitive id="mySphere">
            <sphere radius="3" slices="50" stacks="50" />
        </primitive>
        <primitive id="myTorus">
            <torus inner="1" outer="2" slices="50" loops="50" />
        </primitive>
    </primitives>

    <components>
        <component id="submarineBody">
            <transformation>
               <scale x="1" y="1" z= "2"/>
            </transformation>
            <materials>
                <material id="yellowMetal" />
                <material id="blueMetal" />
                <material id="greyMetal" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="mySphere" />
            </children>
        </component> 
        <component id="submarine">
            <transformation>
               <transformationref id="submarinePos"/>
            </transformation>
            <materials>
                <material id="yellowMetal" />
                <material id="blueMetal" />
                <material id="greyMetal" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="submarineBody"/>
            </children>
        </component>   
    </components>
</lxs>


