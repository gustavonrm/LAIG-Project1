<lxs>
    <scene root="myRoot" axis_length="10" />

    <views default="defaultcamera" >
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
<!--
        <ortho id="alternativeCamera"  near="ff" far="ff" left="ff" right="ff" top="ff" bottom="ff" >
            <from x="ff" y="ff" z="ff" />
            <to x="ff" y="ff" z="ff" />
            <up x="ff" y="ff" z="ff" /> 
        </ortho>
-->
    </views>

    <ambient>  
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <omni id="dayLight" enabled="0">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="mySpotLight" enabled="0" angle="90.0" exponent="0.0">
            <location x="0" y="10" z="0" w="0" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />
        </spot>
    </lights>

    <textures>  
        <texture id="bankTexture" file="scenes/images/bank.jpg" />
        <texture id="leavesTexture" file="scenes/images/leaves.jpg" />
        <texture id="rocksTexture" file="scenes/images/rocks.jpg" />
        <texture id="trunkTexture" file="scenes/images/trunk-image.jpg" />
        <texture id="vidralTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>  
        <material id="trunkMaterial" shininess = "10" >
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.2" a="1.0" />
            <specular r="0.3" g="0.3" b="0.1" a="1.0" />
        </material>
        <material id="vidralMaterial" shininess = "100" >
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="myRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive >
        <!--
        <primitive id="myTriangle">
             <triangle   x1="ff" y1="ff" z1="ff"
                        x2="ff" y2="ff" z2="ff"
                        x3="ff" y3="ff" z3="ff" />
        </primitive >
        <primitive id="myCylinder">
            <cylinder base="ff" top="ff" height="ff" slices="ii" stacks="ii" />
        </primitive >
        <primitive id="mySphere">
            <sphere radius="ff" slices="ii" stacks="ii" />
        </primitive >
        <primitive id="myTorus">
            <torus inner="ff" outer="ff" slices="ii" loops="ii" />
        </primitive >
        -->
    </primitives >
 
    <components>
        <component id="myRoot">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="vidralMaterial" />
            </materials>
            <texture id="vidralTexture"/>
            <children>
                <primitiveref id="myRectangle" />
            </children>
        </component>       
    </components>
   
</lxs>